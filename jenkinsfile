pipeline {
    agent any

    environment {
        TF_DIR      = "terraform"
        ANSIBLE_DIR = "ansible"
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TF_DIR}") {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir("${TF_DIR}") {
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Verify Inventory') {
            steps {
                dir("${ANSIBLE_DIR}") {
                    sh '''
                        echo "Inventory verification:"
                        ansible-inventory -i inventory/aws_ec2.yaml --graph
                    '''
                }
            }
        }

        stage('Run Ansible Playbook (env_dev ONLY)') {
            steps {
                dir("${ANSIBLE_DIR}") {
                    sh '''
                        ansible-playbook \
                        -i inventory/aws_ec2.yaml \
                        -l env_dev \
                        playbooks/site.yaml
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ PIPELINE SUCCESSFULLY COMPLETED"
        }
        failure {
            echo "❌ PIPELINE FAILED – Check logs"
        }
    }
}
