pipeline {
    agent any

    environment {
        SSH_KEY     = "/var/lib/jenkins/.ssh/jenkinskeylinux16dec.pem"
        TF_DIR      = "terraform"
        ANSIBLE_DIR = "ansible"
        SSH_USER    = "ec2-user"
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TF_DIR}") {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir("${TF_DIR}") {
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Verify Inventory') {
            steps {
                dir("${ANSIBLE_DIR}") {
                    sh '''
                        echo "Inventory verification:"
                        ansible-inventory -i inventory/aws_ec2.yaml --graph
                    '''
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                dir("${ANSIBLE_DIR}") {
                    sh '''
                        ansible-playbook \
                        -i inventory/aws_ec2.yaml \
                        -l aws_ec2 \
                        -u ec2-user \
                        --private-key=/var/lib/jenkins/.ssh/jenkinskeylinux16dec.pem \
                        playbooks/site.yaml
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ PIPELINE SUCCESSFULLY COMPLETED"
        }
        failure {
            echo "❌ PIPELINE FAILED – Check logs"
        }
    }
}
